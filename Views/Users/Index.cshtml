@model IEnumerable<SaatSatisSitesi.Models.User>

<h1>Kullanıcı Listesi</h1>
<a href="/Users/Create">Yeni Kullanıcı Ekle</a>
<table>
    <thead>
        <tr>
            <th>Ad</th>
            <th>Email</th>
            <th>Rol</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a href="/Users/Edit/@user.Id">Düzenle</a>
                    <a href="/Users/Delete/@user.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
