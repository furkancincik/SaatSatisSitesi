@model SaatSatisSitesi.Models.User

<h1>Kullanıcı Düzenle</h1>
<form method="post">
    <label>Ad:</label>
    <input type="text" name="Name" value="@Model.Name" required />
    <br />
    <label>Email:</label>
    <input type="email" name="Email" value="@Model.Email" required />
    <br />
    <label>Rol:</label>
    <select name="Role">
        <option value="User" selected="@((Model.Role == "User") ? "selected" : null)">User</option>
        <option value="Admin" selected="@((Model.Role == "Admin") ? "selected" : null)">Admin</option>
    </select>
    <br />
    <button type="submit">Güncelle</button>
</form>
